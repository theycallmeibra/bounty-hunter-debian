#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_clean:
override_dh_auto_build:
override_dh_auto_install:

override_dh_install:
	mkdir -p debian/bounty-hunter/usr/share/bounty-hunter
	mkdir -p debian/bounty-hunter/usr/bin
	# Копируем исходники кроме папки debian
	find . -maxdepth 1 ! -name 'debian' ! -name '.' -exec cp -r {} debian/bounty-hunter/usr/share/bounty-hunter/ \;
